/* CSS Custom Properties for Theme System */
:root {
  /* Minimalist Theme Colors */
  --bg-primary: #000000;
  --bg-secondary: #ffffff;
  --bg-tertiary: #f8f9fa;
  --bg-card: rgba(255, 255, 255, 0.02);
  --text-primary: #ffffff;
  --text-secondary: #cccccc;
  --text-muted: #888888;
  
  /* Minimal Color Palette */
  --accent-primary: #00ff88;
  --accent-secondary: #0099ff;
  --accent-tertiary: #ff0080;
  --accent-success: #00ff88;
  --accent-warning: #ffaa00;
  --accent-error: #ff4444;
  
  /* Gradient Colors */
  --gradient-primary: linear-gradient(135deg, #00ff88 0%, #0099ff 50%, #ff0080 100%);
  --gradient-secondary: linear-gradient(135deg, #ffaa00 0%, #00ff88 50%, #0099ff 100%);
  --gradient-hero: linear-gradient(135deg, #000000 0%, #000000 50%, #000000 100%);
  --gradient-card: linear-gradient(135deg, #ffffff 0%, #f8f9fa 50%, #e9ecef 100%);
  
  /* Shadows and Glows */
  --glow-primary: 0 0 20px rgba(0, 255, 136, 0.3);
  --glow-secondary: 0 0 20px rgba(0, 153, 255, 0.3);
  --glow-tertiary: 0 0 20px rgba(255, 0, 128, 0.3);
  --shadow-dark: 0 10px 30px rgba(255, 255, 255, 0.1);
  --shadow-card: 0 4px 6px rgba(255, 255, 255, 0.05), 0 2px 4px rgba(255, 255, 255, 0.03);
  
  /* Spacing */
  --spacing-xs: 0.25rem;
  --spacing-sm: 0.5rem;
  --spacing-md: 1rem;
  --spacing-lg: 1.5rem;
  --spacing-xl: 2rem;
  --spacing-2xl: 3rem;
  --spacing-3xl: 4rem;
  
  /* Border Radius */
  --radius-sm: 0.375rem;
  --radius-md: 0.5rem;
  --radius-lg: 0.75rem;
  --radius-xl: 1rem;
  --radius-2xl: 1.5rem;
  --radius-full: 9999px;
  
  /* Transitions */
  --transition-fast: 0.15s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-normal: 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Dark Theme Override */
.dark-theme {
  --bg-primary: #ffffff;
  --bg-secondary: #f8f9fa;
  --bg-tertiary: #e9ecef;
  --bg-card: rgba(255, 255, 255, 0.02);
  --text-primary: #000000;
  --text-secondary: #a1a1aa;
  --text-muted: #6c757d;
  --gradient-hero: linear-gradient(135deg, #ffffff 0%, #f8f9fa 50%, #e9ecef 100%);
  --gradient-card: linear-gradient(135deg, #ffffff 0%, #f8f9fa 50%, #e9ecef 100%);
  --shadow-card: 0 4px 6px rgba(0, 0, 0, 0.05), 0 2px 4px rgba(0, 0, 0, 0.03);
}

/* Reset and Base Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  font-size: 16px;
  scroll-behavior: smooth;
}

body {
  font-family: 'Geist', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', system-ui, sans-serif;
  background-color: var(--bg-primary);
  color: var(--text-primary);
  line-height: 1.7;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  overflow-x: hidden;
  font-feature-settings: 'cv02', 'cv03', 'cv04', 'cv11';
}

.App {
  min-height: 100vh;
  background: var(--bg-primary);
  position: relative;
}

/* Container */
.container {
  width: 100%;
  margin: 0;
  padding: 0 var(--spacing-xl);
}

/* Consistent container for main pages */
.about .container,
.projects .container,
.contact-page .container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--spacing-lg);
}

/* Navigation */
.navbar {
  background: rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(5px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  transition: var(--transition-normal);
  box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
}

.dark-theme .navbar {
  background: rgba(255, 255, 255, 0.1);
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  box-shadow: 0 2px 20px rgba(0, 0, 0, 0.05);
}

.nav-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 70px;
  width: 100%;
  margin: 0;
  padding: 0 var(--spacing-xl);
}


.logo-m {
  font-family: 'Jost', sans-serif !important;
  font-size: 2rem;
  font-weight: 600;
  color: #ffffff;
  transition: var(--transition-normal);
  cursor: pointer;
}

.logo-m:hover {
  transform: scale(1.1);
}

/* Modern Interactions and Hover Effects */
.nav-logo {
  text-decoration: none;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  transition: var(--transition-normal);
}

.nav-logo:hover {
  transform: scale(1.05);
}

.nav-logo:hover .logo-text {
  animation: logo-pulse 0.6s ease-in-out;
}

@keyframes logo-pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.logo-text {
  font-size: 1.25rem;
  font-weight: 700;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.logo-subtitle {
  font-size: 0.75rem;
  color: var(--text-secondary);
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.nav-right {
  display: flex;
  align-items: center;
  gap: var(--spacing-lg);
}

.nav-menu {
  display: flex;
  list-style: none;
  gap: var(--spacing-lg);
  margin: 0;
}

.nav-link {
  text-decoration: none;
  color: var(--text-secondary);
  font-weight: 500;
  font-size: 0.9rem;
  transition: var(--transition-normal);
  position: relative;
  padding: var(--spacing-sm) 0;
}

.nav-link::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0;
  height: 2px;
  background: var(--gradient-primary);
  transition: var(--transition-normal);
}

.nav-link:hover {
  color: var(--accent-primary);
}

.nav-link:hover::after {
  width: 100%;
}

/* Theme Toggle */
.theme-toggle {
  background: none;
  border: none;
  cursor: pointer;
  padding: var(--spacing-sm);
  border-radius: var(--radius-full);
  transition: var(--transition-normal);
}

.theme-toggle:hover {
  background: rgba(99, 102, 241, 0.1);
}

.theme-toggle-track {
  width: 50px;
  height: 26px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-full);
  position: relative;
  transition: var(--transition-normal);
}

.theme-toggle-thumb {
  position: absolute;
  top: 2px;
  left: 2px;
  width: 22px;
  height: 22px;
  background: var(--gradient-primary);
  border-radius: var(--radius-full);
  transition: var(--transition-normal);
  display: flex;
  align-items: center;
  justify-content: center;
}

.dark-theme .theme-toggle-thumb {
  transform: translateX(24px);
}

.theme-icon {
  font-size: 0.75rem;
}

/* Mobile Menu Toggle */
.mobile-menu-toggle {
  display: none;
  background: none;
  border: none;
  cursor: pointer;
  padding: var(--spacing-sm);
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 30px;
  height: 30px;
}

.hamburger {
  display: flex;
  flex-direction: column;
  width: 20px;
  height: 15px;
  position: relative;
}

.hamburger span {
  width: 100%;
  height: 2px;
  background: var(--accent-primary);
  border-radius: 2px;
  transition: var(--transition-normal);
  position: absolute;
}

.hamburger span:nth-child(1) {
  top: 0;
}

.hamburger span:nth-child(2) {
  top: 50%;
  transform: translateY(-50%);
}

.hamburger span:nth-child(3) {
  bottom: 0;
}

.hamburger-open span:nth-child(1) {
  transform: rotate(45deg);
  top: 50%;
  transform-origin: center;
}

.hamburger-open span:nth-child(2) {
  opacity: 0;
}

.hamburger-open span:nth-child(3) {
  transform: rotate(-45deg);
  bottom: 50%;
  transform-origin: center;
}

/* Hero Section */
.hero {
  min-height: 100vh;
  display: flex;
  align-items: center;
  background: var(--gradient-hero);
  position: relative;
  overflow: hidden;
  padding-top: 70px;
}

.hero::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 20% 80%, rgba(99, 102, 241, 0.1) 0%, transparent 50%),
              radial-gradient(circle at 80% 20%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);
  pointer-events: none;
}

.hero-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  text-align: left;
  width: 100%;
  margin: 0;
  padding: 0 var(--spacing-xl);
  position: relative;
  z-index: 1;
}

.hero-text {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.brand-tag {
  display: inline-block;
  background: rgba(255, 255, 255, 0.1);
  color: var(--accent-primary);
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--radius-full);
  font-size: 0.875rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  border: 1px solid rgba(99, 102, 241, 0.3);
  width: fit-content;
}

.hero-title {
  font-family: 'Geist', sans-serif;
  font-size: clamp(3.5rem, 4vw, 2.5rem);
  font-weight: 300;
  line-height: .9;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.gradient-text {
  background: linear-gradient(
    45deg,
    #ffffff 0%,
    #00ff88 25%,
    #ffffff 50%,
    #0099ff 75%,
    #ffffff 100%
  );
  background-size: 300% 100%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: gradient-flow 8s ease-in-out infinite;
  text-shadow: 0 0 30px rgba(0, 255, 136, 0.3);
}

@keyframes gradient-flow {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

@keyframes gradient-shift {
  0%, 100% {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  50% {
    background: var(--gradient-secondary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
}

.hero-subtitle {
  font-family: 'Geist', sans-serif;
  font-size: clamp(1rem, 3vw, 1.25rem);
  color: var(--text-secondary);
  line-height: 1.6;
  max-width: 500px;
}

.hero-buttons {
  display: flex;
  gap: var(--spacing-md);
  flex-wrap: wrap;
}

.hero-buttons .btn {
  position: relative;
  overflow: hidden;
}

.hero-buttons .btn:hover {
  transform: translateY(-3px);
  box-shadow: 0 10px 25px rgba(99, 102, 241, 0.3);
}

.hero-buttons .btn::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.hero-buttons .btn:hover::after {
  width: 300px;
  height: 300px;
}

/* Animated Passport */
.hero-visual {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.modern-card-container {
  position: relative;
  perspective: 1000px;
}

.modern-card {
  position: relative;
  width: 320px;
  height: 420px;
  background: var(--bg-card);
  border-radius: var(--radius-2xl);
  padding: var(--spacing-xl);
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
  box-shadow: var(--shadow-card);
  border: 1px solid rgba(139, 92, 246, 0.1);
  backdrop-filter: blur(10px);
  animation: modern-float 6s ease-in-out infinite;
  cursor: pointer;
}

@keyframes modern-float {
  0%, 100% {
    transform: translateY(0px) rotateY(0deg);
  }
  25% {
    transform: translateY(-15px) rotateY(2deg);
  }
  50% {
    transform: translateY(0px) rotateY(0deg);
  }
  75% {
    transform: translateY(-8px) rotateY(-2deg);
  }
}

.modern-card:hover {
  transform: translateY(-8px) rotateY(5deg);
  box-shadow: 0 20px 40px rgba(99, 102, 241, 0.2);
}

.modern-card:hover .card-glow {
  opacity: 0.6;
  transform: scale(1.05);
}

.card-header {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding-bottom: var(--spacing-md);
  border-bottom: 1px solid rgba(139, 92, 246, 0.1);
}

.status-indicator {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: var(--accent-success);
  animation: status-pulse 2s ease-in-out infinite;
}

@keyframes status-pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.7;
    transform: scale(1.2);
  }
}

.status-text {
  font-size: 0.75rem;
  font-weight: 600;
  color: var(--accent-success);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xl);
}

.profile-section {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.profile-avatar {
  width: 60px;
  height: 60px;
  border-radius: var(--radius-xl);
  background: var(--gradient-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.5rem;
  font-weight: 700;
  color: white;
  box-shadow: var(--glow-primary);
}

.profile-info h3 {
  margin: 0;
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--text-primary);
}

.profile-info p {
  margin: 0;
  font-size: 0.875rem;
  color: var(--text-secondary);
}

.skills-section {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.skill-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-sm) var(--spacing-md);
  background: rgba(0, 0, 0, 0.6);
  border-radius: var(--radius-lg);
  border: 1px solid rgba(255, 255, 255, 0.1);
  transition: var(--transition-normal);
}

.skill-item:hover {
  background: rgba(0, 0, 0, 0.8);
  border-color: rgba(0, 255, 136, 0.3);
  transform: translateX(5px);
}

.skill-icon {
  font-size: 1.2rem;
}

.skill-item span {
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--text-primary);
}

.card-footer {
  display: flex;
  align-items: center;
  padding-top: var(--spacing-md);
  border-top: 1px solid rgba(139, 92, 246, 0.1);
}

.activity-indicator {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.activity-dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: var(--accent-tertiary);
  animation: activity-pulse 3s ease-in-out infinite;
}

@keyframes activity-pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.5;
    transform: scale(1.3);
  }
}

.activity-indicator span {
  font-size: 0.75rem;
  color: var(--text-secondary);
  font-weight: 500;
}

.card-glow {
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: var(--gradient-primary);
  border-radius: var(--radius-2xl);
  filter: blur(20px);
  opacity: 0.2;
  z-index: -1;
  animation: card-glow-pulse 4s ease-in-out infinite;
}

@keyframes card-glow-pulse {
  0%, 100% {
    opacity: 0.2;
    transform: scale(1);
  }
  50% {
    opacity: 0.4;
    transform: scale(1.02);
  }
}

/* Floating Elements */
.floating-elements {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.floating-particle {
  position: absolute;
  width: 4px;
  height: 4px;
  background: var(--accent-primary);
  border-radius: 50%;
  animation: float-particle 10s ease-in-out infinite;
}

.floating-particle:nth-child(1) {
  top: 10%;
  left: 5%;
  animation-delay: 0s;
  background: var(--accent-primary);
}

.floating-particle:nth-child(2) {
  top: 70%;
  right: 10%;
  animation-delay: 2.5s;
  background: var(--accent-secondary);
}

.floating-particle:nth-child(3) {
  bottom: 20%;
  left: 20%;
  animation-delay: 5s;
  background: var(--accent-tertiary);
}

.floating-particle:nth-child(4) {
  top: 40%;
  right: 5%;
  animation-delay: 7.5s;
  background: var(--accent-success);
}

@keyframes float-particle {
  0%, 100% {
    transform: translateY(0px) translateX(0px) scale(1);
    opacity: 0.4;
  }
  25% {
    transform: translateY(-20px) translateX(10px) scale(1.2);
    opacity: 0.8;
  }
  50% {
    transform: translateY(-10px) translateX(-5px) scale(0.8);
    opacity: 0.3;
  }
  75% {
    transform: translateY(-25px) translateX(15px) scale(1.1);
    opacity: 0.6;
  }
}

/* Buttons */
.btn {
  padding: var(--spacing-md) var(--spacing-xl);
  border: none;
  border-radius: var(--radius-md);
  font-size: 1rem;
  font-weight: 600;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: var(--transition-normal);
  position: relative;
  overflow: hidden;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  min-width: 160px;
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: var(--transition-slow);
}

.btn:hover::before {
  left: 100%;
}

.btn-primary {
  background: var(--gradient-primary);
  color: white;
  box-shadow: var(--glow-primary);
}

.btn-primary:hover {
  box-shadow: var(--glow-primary), 0 0 40px rgba(99, 102, 241, 0.4);
  transform: translateY(-2px);
}

.btn-outline {
  background: transparent;
  color: var(--accent-primary);
  border: 2px solid var(--accent-primary);
}

.btn-outline:hover {
  background: var(--accent-primary);
  color: var(--bg-primary);
  box-shadow: var(--glow-primary);
  transform: translateY(-2px);
}



/* Contact Section */
.contact-section {
  font-family: 'Geist', sans-serif;
  padding: var(--spacing-3xl) 0;
  background: var(--bg-primary);
  position: relative;
  overflow: hidden;
}

.contact-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 30% 20%, rgba(0, 255, 136, 0.03) 0%, transparent 50%);
  pointer-events: none;
}

.contact-section h2 {
  font-size: clamp(2rem, 5vw, 3rem);
  font-weight: 800;
  line-height: 1.2;
  margin-bottom: var(--spacing-xl);
  color: var(--text-primary);
  text-align: center;
}

.contact-section p {
  font-size: 1.125rem;
  line-height: 1.8;
  color: var(--text-secondary);
  max-width: 600px;
  margin: 0 auto var(--spacing-xl);
  text-align: center;
}

.contact-info {
  display: flex;
  justify-content: center;
  align-items: center;
}

.contact-link {
  color: var(--text-primary);
  text-decoration: none;
  font-size: 1.25rem;
  font-weight: 600;
  border-bottom: 2px solid var(--accent-primary);
  padding-bottom: 4px;
  transition: var(--transition-normal);
}

.contact-link:hover {
  color: var(--accent-primary);
  border-bottom-color: var(--accent-secondary);
}

.skills {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
  justify-content: center;
  margin-top: var(--spacing-xl);
}

.skill-tag {
  background: rgba(0, 0, 0, 0.7);
  color: var(--accent-primary);
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--radius-full);
  font-size: 0.875rem;
  font-weight: 600;
  border: 1px solid rgba(0, 255, 136, 0.2);
  transition: var(--transition-normal);
  position: relative;
  overflow: hidden;
}

.skill-tag::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(0, 255, 136, 0.3), transparent);
  transition: left 0.5s;
}

.skill-tag:hover::before {
  left: 100%;
}

.skill-tag:hover {
  background: rgba(0, 0, 0, 0.9);
  border-color: rgba(0, 255, 136, 0.4);
  transform: translateY(-2px);
}

.projects-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--spacing-xl);
  margin-top: var(--spacing-xl);
}

.project-card {
  background: rgba(0, 0, 0, 0.8);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  border: 1px solid rgba(255, 255, 255, 0.1);
  transition: var(--transition-normal);
}

.project-card:hover {
  transform: translateY(-5px);
  background: rgba(0, 0, 0, 0.9);
  border-color: rgba(139, 92, 246, 0.3);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.4), 0 0 20px rgba(139, 92, 246, 0.2);
}

.project-card h3 {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: var(--spacing-md);
  color: var(--text-primary);
}

.project-card p {
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: var(--spacing-lg);
}

.project-tech {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-xs);
}

.project-tech span {
  background: rgba(0, 0, 0, 0.6);
  color: var(--accent-tertiary);
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 500;
  border: 1px solid rgba(255, 0, 128, 0.2);
}

/* Responsive Design - Mobile First */
@media (max-width: 768px) {
  .nav-menu {
    position: fixed;
    top: 70px;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(10px);
    flex-direction: column;
    padding: var(--spacing-lg);
    transform: translateX(-80%);
    transition: var(--transition-normal);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.2);
  }

  .nav-menu-open {
    transform: translateX(0);
  }

  .mobile-menu-toggle {
    display: flex;
  }

  .hero-content {
    align-items: flex-start;
    text-align: left;
  }

  .hero-text {
    order: 2;
  }

  .hero-visual {
    order: 1;
  }

  .modern-card {
    width: 280px;
    height: 380px;
  }

  .hero-buttons {
    justify-content: center;
  }

  .brand-tag {
    align-self: center;
  }
}

@media (max-width: 480px) {
  .nav-container {
    padding: 0 var(--spacing-sm);
  }

  .hero-content {
    padding: 0 var(--spacing-sm);
    align-items: flex-start;
    text-align: left;
  }

  .modern-card {
    width: 240px;
    height: 320px;
  }

  .btn {
    min-width: 140px;
    padding: var(--spacing-sm) var(--spacing-lg);
  }
}

/* Animations for better performance */
@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

/* Smooth scroll behavior for anchor links */
html {
  scroll-behavior: smooth;
}

/* Custom scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: var(--bg-secondary);
}

::-webkit-scrollbar-thumb {
  background: var(--accent-primary);
  border-radius: var(--radius-full);
}

::-webkit-scrollbar-thumb:hover {
  background: var(--accent-secondary);
}

/* Focus styles for accessibility */
.btn:focus-visible,
.nav-link:focus-visible,
.theme-toggle:focus-visible {
  outline: 2px solid var(--accent-primary);
  outline-offset: 2px;
}

/* Improved mobile interactions */
@media (max-width: 768px) {
  .modern-card:hover {
    transform: translateY(-4px);
  }
  
  .hero-buttons .btn:hover {
    transform: translateY(-2px);
  }
  
  .skill-tag:hover {
    transform: translateY(-1px);
  }
}

/* ========================================
   BLOG STYLES
   ======================================== */

/* Blog Main Container */
.blog {
  min-height: 100vh;
  background: var(--bg-primary);
  color: var(--text-primary);
  padding: var(--spacing-3xl) 0;
}

.blog .container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--spacing-lg);
}

/* Blog Header */
.blog-header {
  text-align: center;
  margin-bottom: var(--spacing-3xl);
}

.blog-header h1 {
  font-size: clamp(2.5rem, 5vw, 4rem);
  font-weight: 800;
  background: var(--gradient-primary);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: var(--spacing-lg);
}

.blog-intro {
  font-size: 1.25rem;
  color: var(--text-secondary);
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.6;
}

/* Blog Filters */
.blog-filters {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-3xl);
  padding: var(--spacing-xl);
  background: rgba(0, 0, 0, 0.6);
  border-radius: var(--radius-xl);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.search-form {
  display: flex;
  gap: var(--spacing-md);
  max-width: 500px;
  margin: 0 auto;
}

.search-input {
  flex: 1;
  padding: var(--spacing-md);
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-md);
  color: var(--text-primary);
  font-size: 1rem;
  transition: var(--transition-normal);
}

.search-input:focus {
  outline: none;
  border-color: var(--accent-primary);
  box-shadow: 0 0 0 2px rgba(0, 255, 136, 0.2);
}

.search-input::placeholder {
  color: var(--text-muted);
}

.search-button {
  padding: var(--spacing-md) var(--spacing-lg);
  background: var(--gradient-primary);
  border: none;
  border-radius: var(--radius-md);
  color: white;
  font-weight: 600;
  cursor: pointer;
  transition: var(--transition-normal);
  white-space: nowrap;
}

.search-button:hover {
  transform: translateY(-2px);
  box-shadow: var(--glow-primary);
}

.category-filters {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
  justify-content: center;
}

.category-filter {
  padding: var(--spacing-sm) var(--spacing-md);
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-full);
  color: var(--text-secondary);
  font-size: 0.875rem;
  font-weight: 500;
  cursor: pointer;
  transition: var(--transition-normal);
  white-space: nowrap;
}

.category-filter:hover {
  background: rgba(255, 255, 255, 0.1);
  color: var(--text-primary);
}

.category-filter.active {
  background: var(--gradient-primary);
  color: white;
  border-color: transparent;
}

/* Blog Posts Grid */
.blog-posts {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: var(--spacing-xl);
  margin-bottom: var(--spacing-3xl);
}

.blog-post {
  background: rgba(0, 0, 0, 0.8);
  border-radius: var(--radius-xl);
  overflow: hidden;
  transition: var(--transition-normal);
  border: 1px solid rgba(255, 255, 255, 0.1);
  cursor: pointer;
}

.blog-post:hover {
  transform: translateY(-5px);
  background: rgba(0, 0, 0, 0.9);
  border-color: rgba(0, 255, 136, 0.3);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4), var(--glow-primary);
}

.post-image-preview {
  height: 200px;
  overflow: hidden;
  position: relative;
}

.post-image-preview img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: var(--transition-slow);
}

.blog-post:hover .post-image-preview img {
  transform: scale(1.05);
}

.post-content-preview {
  padding: var(--spacing-xl);
}

.post-meta {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-md);
  font-size: 0.875rem;
  color: var(--text-muted);
}

.post-meta span {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.post-title {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: var(--spacing-md);
  color: var(--text-primary);
  line-height: 1.3;
}

.post-excerpt {
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: var(--spacing-lg);
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.post-tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-xs);
  margin-bottom: var(--spacing-lg);
}

.tag {
  background: rgba(0, 255, 136, 0.1);
  color: var(--accent-primary);
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-full);
  font-size: 0.75rem;
  font-weight: 500;
  border: 1px solid rgba(0, 255, 136, 0.2);
}

.category-tag {
  background: rgba(0, 153, 255, 0.1);
  color: var(--accent-secondary);
  border-color: rgba(0, 153, 255, 0.2);
}

.read-more {
  background: none;
  border: none;
  color: var(--accent-primary);
  font-weight: 600;
  cursor: pointer;
  transition: var(--transition-normal);
  font-size: 1rem;
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.read-more:hover {
  color: var(--accent-secondary);
  transform: translateX(4px);
}

/* Individual Blog Post */
.blog-post-full {
  max-width: 800px;
  margin: 0 auto;
}

.back-button {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-md);
  color: var(--text-secondary);
  padding: var(--spacing-sm) var(--spacing-md);
  margin-bottom: var(--spacing-xl);
  cursor: pointer;
  transition: var(--transition-normal);
  font-size: 0.875rem;
}

.back-button:hover {
  background: rgba(255, 255, 255, 0.1);
  color: var(--text-primary);
  transform: translateX(-4px);
}

.full-post {
  background: rgba(0, 0, 0, 0.8);
  border-radius: var(--radius-xl);
  padding: var(--spacing-3xl);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.post-header {
  margin-bottom: var(--spacing-3xl);
  text-align: center;
}

.post-header .post-title {
  font-size: clamp(2rem, 4vw, 3rem);
  font-weight: 800;
  margin-bottom: var(--spacing-lg);
  line-height: 1.2;
}

.post-header .post-excerpt {
  font-size: 1.25rem;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-lg);
  font-style: italic;
}

.post-image {
  margin-bottom: var(--spacing-3xl);
  border-radius: var(--radius-lg);
  overflow: hidden;
}

.post-image img {
  width: 100%;
  height: auto;
  display: block;
}

/* Blog Content Styling */
.post-content {
  font-size: 1.125rem;
  line-height: 1.8;
  color: var(--text-primary);
}

.post-content h1,
.post-content h2,
.post-content h3,
.post-content h4,
.post-content h5,
.post-content h6 {
  color: var(--text-primary);
  font-weight: 700;
  margin: var(--spacing-2xl) 0 var(--spacing-lg) 0;
  line-height: 1.3;
}

.post-content h1 { font-size: 2.25rem; }
.post-content h2 { font-size: 1.875rem; }
.post-content h3 { font-size: 1.5rem; }
.post-content h4 { font-size: 1.25rem; }
.post-content h5 { font-size: 1.125rem; }
.post-content h6 { font-size: 1rem; }

.post-content p {
  margin-bottom: var(--spacing-lg);
  color: var(--text-secondary);
}

.post-content ul,
.post-content ol {
  margin-bottom: var(--spacing-lg);
  padding-left: var(--spacing-xl);
}

.post-content li {
  margin-bottom: var(--spacing-sm);
  color: var(--text-secondary);
}

.post-content blockquote {
  border-left: 4px solid var(--accent-primary);
  padding-left: var(--spacing-lg);
  margin: var(--spacing-xl) 0;
  font-style: italic;
  color: var(--text-secondary);
  background: rgba(0, 255, 136, 0.05);
  border-radius: 0 var(--radius-md) var(--radius-md) 0;
  padding: var(--spacing-lg);
}

.post-content pre {
  background: rgba(0, 0, 0, 0.3);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
  margin: var(--spacing-xl) 0;
  overflow-x: auto;
  font-size: 0.875rem;
}

.post-content code {
  background: rgba(0, 0, 0, 0.3);
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-family: 'Courier New', monospace;
  font-size: 0.875rem;
  color: var(--accent-primary);
}

.post-content pre code {
  background: none;
  padding: 0;
  color: var(--text-primary);
}

.post-content table {
  width: 100%;
  border-collapse: collapse;
  margin: var(--spacing-xl) 0;
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-md);
  overflow: hidden;
}

.post-content th,
.post-content td {
  padding: var(--spacing-md);
  text-align: left;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.post-content th {
  background: rgba(255, 255, 255, 0.05);
  font-weight: 600;
  color: var(--text-primary);
}

.post-content td {
  color: var(--text-secondary);
}

.post-content figure {
  margin: var(--spacing-xl) 0;
  text-align: center;
}

.post-content figure img {
  max-width: 100%;
  border-radius: var(--radius-md);
}

.post-content figure.image-with-border img {
  border: 1px solid rgba(255, 255, 255, 0.2);
  padding: var(--spacing-sm);
}

.post-content figure.image-with-background img {
  background: rgba(255, 255, 255, 0.05);
  padding: var(--spacing-md);
}

.post-content figure.image-stretched img {
  width: 100%;
}

.post-content figcaption {
  margin-top: var(--spacing-md);
  font-size: 0.875rem;
  color: var(--text-muted);
  font-style: italic;
}

/* Post Gallery */
.post-gallery {
  margin-top: var(--spacing-3xl);
  padding-top: var(--spacing-3xl);
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.post-gallery h3 {
  margin-bottom: var(--spacing-xl);
  color: var(--text-primary);
}

.gallery-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--spacing-lg);
}

.gallery-item {
  border-radius: var(--radius-md);
  overflow: hidden;
  transition: var(--transition-normal);
}

.gallery-item:hover {
  transform: scale(1.05);
}

.gallery-item img {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

/* Pagination */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: var(--spacing-lg);
  margin-top: var(--spacing-3xl);
  padding: var(--spacing-xl);
}

.pagination-button {
  padding: var(--spacing-md) var(--spacing-lg);
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-md);
  color: var(--text-secondary);
  cursor: pointer;
  transition: var(--transition-normal);
  font-weight: 500;
}

.pagination-button:hover:not(:disabled) {
  background: rgba(255, 255, 255, 0.1);
  color: var(--text-primary);
  transform: translateY(-2px);
}

.pagination-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.pagination-info {
  color: var(--text-secondary);
  font-weight: 500;
}

/* Loading States */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-3xl);
  color: var(--text-secondary);
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid rgba(255, 255, 255, 0.1);
  border-top: 3px solid var(--accent-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: var(--spacing-lg);
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Error States */
.error {
  text-align: center;
  padding: var(--spacing-3xl);
  color: var(--accent-error);
}

.error h2 {
  margin-bottom: var(--spacing-lg);
  color: var(--accent-error);
}

.error p {
  margin-bottom: var(--spacing-lg);
  color: var(--text-secondary);
}

.retry-button {
  padding: var(--spacing-md) var(--spacing-lg);
  background: var(--accent-error);
  border: none;
  border-radius: var(--radius-md);
  color: white;
  font-weight: 600;
  cursor: pointer;
  transition: var(--transition-normal);
}

.retry-button:hover {
  background: #ff6666;
  transform: translateY(-2px);
}

/* No Posts State */
.no-posts {
  text-align: center;
  padding: var(--spacing-3xl);
  color: var(--text-secondary);
}

.no-posts h2 {
  margin-bottom: var(--spacing-lg);
  color: var(--text-primary);
}

/* Coming Soon Card */
.blog-coming-soon {
  margin-top: var(--spacing-3xl);
}

.coming-soon-card {
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(255, 255, 255, 0.05);
  border-radius: var(--radius-xl);
  padding: var(--spacing-3xl);
  text-align: center;
}

.coming-soon-card h2 {
  margin-bottom: var(--spacing-lg);
  color: var(--text-primary);
}

.coming-soon-card p {
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: var(--spacing-lg);
}

.coming-soon-card ul {
  text-align: left;
  max-width: 500px;
  margin: var(--spacing-lg) auto;
  color: var(--text-secondary);
}

.coming-soon-card li {
  margin-bottom: var(--spacing-sm);
}

/* Responsive Blog Styles */
@media (max-width: 768px) {
  .blog {
    padding: var(--spacing-xl) 0;
  }
  
  .blog .container {
    padding: 0 var(--spacing-md);
  }
  
  .blog-filters {
    padding: var(--spacing-lg);
  }
  
  .search-form {
    flex-direction: column;
  }
  
  .category-filters {
    justify-content: flex-start;
  }
  
  .blog-posts {
    grid-template-columns: 1fr;
    gap: var(--spacing-lg);
  }
  
  .full-post {
    padding: var(--spacing-xl);
  }
  
  .post-content {
    font-size: 1rem;
  }
  
  .pagination {
    flex-direction: column;
    gap: var(--spacing-md);
  }
}

@media (max-width: 480px) {
  .blog .container {
    padding: 0 var(--spacing-sm);
  }
  
  .blog-filters {
    padding: var(--spacing-md);
  }
  
  .post-content-preview {
    padding: var(--spacing-lg);
  }
  
  .full-post {
    padding: var(--spacing-lg);
  }
  
  .post-header .post-title {
    font-size: 1.75rem;
  }
}

/* Auth Pages Styles */
.auth-page {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--bg-primary);
  padding: var(--spacing-xl);
}

.auth-container {
  width: 100%;
  max-width: 400px;
  margin: 0 auto;
}

.auth-card {
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(255, 255, 255, 0.05);
  border-radius: var(--radius-xl);
  padding: var(--spacing-3xl);
  box-shadow: var(--shadow-dark);
}

.auth-header {
  text-align: center;
  margin-bottom: var(--spacing-2xl);
}

.auth-header h1 {
  color: var(--text-primary);
  font-size: 2rem;
  margin-bottom: var(--spacing-sm);
  font-weight: 600;
}

.auth-header p {
  color: var(--text-secondary);
  font-size: 1rem;
}

.auth-form {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.auth-form .form-group {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.auth-form label {
  color: var(--text-primary);
  font-weight: 500;
  font-size: 0.875rem;
}

.auth-form input {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  color: var(--text-primary);
  font-size: 1rem;
  transition: var(--transition-normal);
}

.auth-form input:focus {
  outline: none;
  border-color: var(--accent-primary);
  box-shadow: 0 0 0 3px rgba(0, 255, 136, 0.1);
}

.auth-form input::placeholder {
  color: var(--text-muted);
}

.auth-button {
  background: var(--gradient-primary);
  border: none;
  border-radius: var(--radius-md);
  padding: var(--spacing-md) var(--spacing-lg);
  color: var(--bg-primary);
  font-weight: 600;
  font-size: 1rem;
  cursor: pointer;
  transition: var(--transition-normal);
  margin-top: var(--spacing-md);
}

.auth-button:hover {
  transform: translateY(-2px);
  box-shadow: var(--glow-primary);
}

.auth-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

.button-loading {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  justify-content: center;
}

.auth-error {
  background: rgba(255, 68, 68, 0.1);
  border: 1px solid rgba(255, 68, 68, 0.3);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
}

.auth-error p {
  color: var(--accent-error);
  font-size: 0.875rem;
  margin: 0;
}

.auth-footer {
  text-align: center;
  margin-top: var(--spacing-xl);
  padding-top: var(--spacing-lg);
  border-top: 1px solid rgba(255, 255, 255, 0.05);
}

.auth-footer p {
  color: var(--text-secondary);
  font-size: 0.875rem;
}

.auth-link {
  color: var(--accent-primary);
  cursor: pointer;
  text-decoration: none;
  transition: var(--transition-normal);
}

.auth-link:hover {
  color: var(--accent-secondary);
}

.auth-loading {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--bg-primary);
}

.auth-loading .container {
  text-align: center;
}

.auth-loading .loading {
  color: var(--text-primary);
}

/* Admin Pages Styles */
.admin-page {
  min-height: 100vh;
  background: var(--bg-primary);
  padding-top: 80px; /* Space for navbar */
}

.admin-page .container {
  max-width: 1200px;
  margin: 0 auto;
  padding: var(--spacing-xl);
}

.admin-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--spacing-2xl);
  padding-bottom: var(--spacing-xl);
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.admin-title h1 {
  color: var(--text-primary);
  font-size: 2.5rem;
  margin-bottom: var(--spacing-sm);
  font-weight: 600;
}

.admin-title p {
  color: var(--text-secondary);
  font-size: 1.125rem;
}

.admin-actions {
  display: flex;
  gap: var(--spacing-md);
  align-items: center;
}

.primary-button {
  background: var(--gradient-primary);
  border: none;
  border-radius: var(--radius-md);
  padding: var(--spacing-md) var(--spacing-lg);
  color: var(--bg-primary);
  font-weight: 600;
  font-size: 0.875rem;
  cursor: pointer;
  transition: var(--transition-normal);
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.primary-button:hover {
  transform: translateY(-2px);
  box-shadow: var(--glow-primary);
}

.secondary-button {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-md);
  padding: var(--spacing-md) var(--spacing-lg);
  color: var(--text-primary);
  font-weight: 500;
  font-size: 0.875rem;
  cursor: pointer;
  transition: var(--transition-normal);
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.secondary-button:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.2);
}

.logout-button {
  background: rgba(255, 68, 68, 0.1);
  border: 1px solid rgba(255, 68, 68, 0.3);
  border-radius: var(--radius-md);
  padding: var(--spacing-md) var(--spacing-lg);
  color: var(--accent-error);
  font-weight: 500;
  font-size: 0.875rem;
  cursor: pointer;
  transition: var(--transition-normal);
}

.logout-button:hover {
  background: rgba(255, 68, 68, 0.2);
  border-color: rgba(255, 68, 68, 0.5);
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-lg);
  padding: var(--spacing-3xl);
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid rgba(255, 255, 255, 0.1);
  border-top: 3px solid var(--accent-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading p {
  color: var(--text-secondary);
  font-size: 1rem;
}

.error-message {
  background: rgba(255, 68, 68, 0.1);
  border: 1px solid rgba(255, 68, 68, 0.3);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-xl);
}

.error-message p {
  color: var(--accent-error);
  margin: 0;
}

/* Dashboard Styles */
.dashboard-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-2xl);
}

.stat-card {
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(255, 255, 255, 0.05);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  display: flex;
  align-items: center;
  gap: var(--spacing-lg);
  transition: var(--transition-normal);
}

.stat-card:hover {
  background: rgba(255, 255, 255, 0.05);
  border-color: rgba(255, 255, 255, 0.1);
}

.stat-icon {
  font-size: 2rem;
  opacity: 0.8;
}

.stat-content h3 {
  color: var(--text-primary);
  font-size: 2rem;
  font-weight: 600;
  margin-bottom: var(--spacing-xs);
}

.stat-content p {
  color: var(--text-secondary);
  font-size: 0.875rem;
  margin: 0;
}

.dashboard-actions {
  margin-bottom: var(--spacing-2xl);
}

.dashboard-actions h2 {
  color: var(--text-primary);
  font-size: 1.5rem;
  margin-bottom: var(--spacing-lg);
}

.action-cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--spacing-lg);
}

.action-card {
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(255, 255, 255, 0.05);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  cursor: pointer;
  transition: var(--transition-normal);
  text-align: center;
}

.action-card:hover {
  background: rgba(255, 255, 255, 0.05);
  border-color: rgba(255, 255, 255, 0.1);
  transform: translateY(-2px);
}

.action-icon {
  font-size: 2.5rem;
  margin-bottom: var(--spacing-md);
  opacity: 0.8;
}

.action-card h3 {
  color: var(--text-primary);
  font-size: 1.25rem;
  margin-bottom: var(--spacing-sm);
}

.action-card p {
  color: var(--text-secondary);
  font-size: 0.875rem;
  margin: 0;
}

.dashboard-recent h2 {
  color: var(--text-primary);
  font-size: 1.5rem;
  margin-bottom: var(--spacing-lg);
}

.recent-posts {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.recent-post {
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(255, 255, 255, 0.05);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: var(--transition-normal);
}

.recent-post:hover {
  background: rgba(255, 255, 255, 0.05);
  border-color: rgba(255, 255, 255, 0.1);
}

.recent-post-content h3 {
  color: var(--text-primary);
  font-size: 1.125rem;
  margin-bottom: var(--spacing-xs);
}

.recent-post-content p {
  color: var(--text-secondary);
  font-size: 0.875rem;
  margin-bottom: var(--spacing-sm);
}

.recent-post-meta {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.status-badge {
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.status-badge.published {
  background: rgba(0, 255, 136, 0.1);
  color: var(--accent-success);
}

.status-badge.draft {
  background: rgba(255, 170, 0, 0.1);
  color: var(--accent-warning);
}

.status-badge.archived {
  background: rgba(136, 136, 136, 0.1);
  color: var(--text-muted);
}

.post-date {
  color: var(--text-muted);
  font-size: 0.75rem;
}

.recent-post-actions {
  display: flex;
  gap: var(--spacing-sm);
}

.edit-button, .view-button {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-sm);
  padding: var(--spacing-sm) var(--spacing-md);
  color: var(--text-primary);
  font-size: 0.75rem;
  cursor: pointer;
  transition: var(--transition-normal);
}

.edit-button:hover, .view-button:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.2);
}

.no-posts {
  text-align: center;
  padding: var(--spacing-3xl);
  color: var(--text-secondary);
}

.no-posts span {
  color: var(--accent-primary);
  cursor: pointer;
  text-decoration: underline;
}

.no-posts span:hover {
  color: var(--accent-secondary);
}

.empty-state {
  text-align: center;
  padding: var(--spacing-3xl);
  color: var(--text-secondary);
}

.empty-icon {
  font-size: 4rem;
  margin-bottom: var(--spacing-lg);
  opacity: 0.5;
}

.empty-state h3 {
  color: var(--text-primary);
  font-size: 1.5rem;
  margin-bottom: var(--spacing-md);
}

.empty-state p {
  margin-bottom: var(--spacing-lg);
}

/* Editor Styles */
.editor-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-2xl);
  padding-bottom: var(--spacing-xl);
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.editor-header h1 {
  color: var(--text-primary);
  font-size: 2rem;
  margin: 0;
}

.editor-actions {
  display: flex;
  gap: var(--spacing-md);
  align-items: center;
}

.cancel-button {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-md);
  padding: var(--spacing-md) var(--spacing-lg);
  color: var(--text-primary);
  font-weight: 500;
  cursor: pointer;
  transition: var(--transition-normal);
}

.cancel-button:hover {
  background: rgba(255, 255, 255, 0.1);
}

.save-draft-button {
  background: rgba(255, 170, 0, 0.1);
  border: 1px solid rgba(255, 170, 0, 0.3);
  border-radius: var(--radius-md);
  padding: var(--spacing-md) var(--spacing-lg);
  color: var(--accent-warning);
  font-weight: 500;
  cursor: pointer;
  transition: var(--transition-normal);
}

.save-draft-button:hover {
  background: rgba(255, 170, 0, 0.2);
}

.publish-button {
  background: var(--gradient-primary);
  border: none;
  border-radius: var(--radius-md);
  padding: var(--spacing-md) var(--spacing-lg);
  color: var(--bg-primary);
  font-weight: 600;
  cursor: pointer;
  transition: var(--transition-normal);
}

.publish-button:hover {
  transform: translateY(-2px);
  box-shadow: var(--glow-primary);
}

.editor-error {
  background: rgba(255, 68, 68, 0.1);
  border: 1px solid rgba(255, 68, 68, 0.3);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-xl);
}

.editor-error p {
  color: var(--accent-error);
  margin: 0;
}

.editor-form {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xl);
}

.post-meta-form {
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(255, 255, 255, 0.05);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
}

.form-row {
  display: flex;
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
}

.form-row:last-child {
  margin-bottom: 0;
}

.form-group {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.form-group label {
  color: var(--text-primary);
  font-weight: 500;
  font-size: 0.875rem;
}

.form-group input,
.form-group textarea,
.form-group select {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  color: var(--text-primary);
  font-size: 1rem;
  transition: var(--transition-normal);
}

.form-group input:focus,
.form-group textarea:focus,
.form-group select:focus {
  outline: none;
  border-color: var(--accent-primary);
  box-shadow: 0 0 0 3px rgba(0, 255, 136, 0.1);
}

.form-group input::placeholder,
.form-group textarea::placeholder {
  color: var(--text-muted);
}

.form-group textarea {
  resize: vertical;
  min-height: 80px;
}

.tags-selector {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
  margin-top: var(--spacing-sm);
}

.tag-checkbox {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  cursor: pointer;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-sm);
  padding: var(--spacing-sm) var(--spacing-md);
  transition: var(--transition-normal);
}

.tag-checkbox:hover {
  background: rgba(255, 255, 255, 0.1);
}

.tag-checkbox input[type="checkbox"] {
  margin: 0;
  width: auto;
  height: auto;
}

.tag-label {
  color: var(--text-primary);
  font-size: 0.875rem;
  font-weight: 500;
}

.content-editor {
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(255, 255, 255, 0.05);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
}

.content-editor label {
  color: var(--text-primary);
  font-weight: 500;
  font-size: 0.875rem;
  margin-bottom: var(--spacing-md);
  display: block;
}

.editor-container {
  min-height: 400px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
}

/* Editor.js custom styles */
.codex-editor {
  color: var(--text-primary) !important;
}

.codex-editor__redactor {
  padding-bottom: var(--spacing-xl) !important;
}

.ce-block__content {
  color: var(--text-primary) !important;
}

.ce-paragraph {
  color: var(--text-primary) !important;
}

.ce-header {
  color: var(--text-primary) !important;
}

.ce-quote {
  color: var(--text-primary) !important;
}

.ce-code {
  background: rgba(255, 255, 255, 0.05) !important;
  border: 1px solid rgba(255, 255, 255, 0.1) !important;
  color: var(--text-primary) !important;
}

.ce-toolbar__content {
  background: rgba(0, 0, 0, 0.9) !important;
  border: 1px solid rgba(255, 255, 255, 0.1) !important;
}

.ce-toolbar__plus {
  color: var(--text-primary) !important;
}

.ce-toolbar__plus:hover {
  background: rgba(255, 255, 255, 0.1) !important;
}

.ce-toolbox {
  background: rgba(0, 0, 0, 0.9) !important;
  border: 1px solid rgba(255, 255, 255, 0.1) !important;
}

.ce-toolbox__button {
  color: var(--text-primary) !important;
}

.ce-toolbox__button:hover {
  background: rgba(255, 255, 255, 0.1) !important;
}

.ce-inline-toolbar {
  background: rgba(0, 0, 0, 0.9) !important;
  border: 1px solid rgba(255, 255, 255, 0.1) !important;
}

.ce-inline-tool {
  color: var(--text-primary) !important;
}

.ce-inline-tool:hover {
  background: rgba(255, 255, 255, 0.1) !important;
}

/* Categories and Tags Management */
.form-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.form-modal-content {
  background: var(--bg-primary);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-lg);
  width: 90%;
  max-width: 500px;
  max-height: 90vh;
  overflow-y: auto;
}

.form-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-xl);
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.form-modal-header h2 {
  color: var(--text-primary);
  font-size: 1.5rem;
  margin: 0;
}

.close-button {
  background: none;
  border: none;
  color: var(--text-muted);
  font-size: 1.5rem;
  cursor: pointer;
  padding: var(--spacing-sm);
  transition: var(--transition-normal);
}

.close-button:hover {
  color: var(--text-primary);
}

.category-form,
.tag-form {
  padding: var(--spacing-xl);
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.form-actions {
  display: flex;
  gap: var(--spacing-md);
  justify-content: flex-end;
  margin-top: var(--spacing-lg);
}

.save-button {
  background: var(--gradient-primary);
  border: none;
  border-radius: var(--radius-md);
  padding: var(--spacing-md) var(--spacing-lg);
  color: var(--bg-primary);
  font-weight: 600;
  cursor: pointer;
  transition: var(--transition-normal);
}

.save-button:hover {
  transform: translateY(-2px);
  box-shadow: var(--glow-primary);
}

.table-container {
  overflow-x: auto;
  border-radius: var(--radius-lg);
  border: 1px solid rgba(255, 255, 255, 0.05);
}

.admin-table {
  width: 100%;
  border-collapse: collapse;
  background: rgba(255, 255, 255, 0.02);
}

.admin-table th,
.admin-table td {
  padding: var(--spacing-lg);
  text-align: left;
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.admin-table th {
  background: rgba(255, 255, 255, 0.05);
  color: var(--text-primary);
  font-weight: 600;
  font-size: 0.875rem;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.admin-table td {
  color: var(--text-secondary);
}

.admin-table td strong {
  color: var(--text-primary);
}

.posts-count {
  background: rgba(0, 255, 136, 0.1);
  color: var(--accent-success);
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 500;
}

.table-actions {
  display: flex;
  gap: var(--spacing-sm);
}

.delete-button {
  background: rgba(255, 68, 68, 0.1);
  border: 1px solid rgba(255, 68, 68, 0.3);
  border-radius: var(--radius-sm);
  padding: var(--spacing-sm) var(--spacing-md);
  color: var(--accent-error);
  font-size: 0.75rem;
  cursor: pointer;
  transition: var(--transition-normal);
}

.delete-button:hover {
  background: rgba(255, 68, 68, 0.2);
}

/* Tags specific styles */
.tags-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: var(--spacing-lg);
}

.tag-card {
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(255, 255, 255, 0.05);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  transition: var(--transition-normal);
}

.tag-card:hover {
  background: rgba(255, 255, 255, 0.05);
  border-color: rgba(255, 255, 255, 0.1);
}

.tag-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.tag-preview {
  flex: 1;
}

.tag-badge {
  display: inline-block;
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: 0.875rem;
  font-weight: 500;
  color: white;
}

.tag-actions {
  display: flex;
  gap: var(--spacing-xs);
}

.tag-actions button {
  background: none;
  border: none;
  font-size: 1rem;
  cursor: pointer;
  padding: var(--spacing-xs);
  border-radius: var(--radius-sm);
  transition: var(--transition-normal);
}

.tag-actions button:hover {
  background: rgba(255, 255, 255, 0.1);
}

.tag-card-content h3 {
  color: var(--text-primary);
  font-size: 1.125rem;
  margin-bottom: var(--spacing-sm);
}

.tag-card-content p {
  color: var(--text-secondary);
  font-size: 0.875rem;
  margin-bottom: var(--spacing-xs);
}

.tag-date {
  color: var(--text-muted);
  font-size: 0.75rem;
}

.color-input-group {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.color-input-group input[type="color"] {
  width: 40px;
  height: 40px;
  border: none;
  border-radius: var(--radius-sm);
  cursor: pointer;
}

.color-input-group input[type="text"] {
  flex: 1;
}

.color-preview {
  width: 20px;
  height: 20px;
  border-radius: var(--radius-sm);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

/* Responsive styles */
@media (max-width: 768px) {
  .admin-page .container {
    padding: var(--spacing-md);
  }
  
  .admin-header {
    flex-direction: column;
    gap: var(--spacing-lg);
    align-items: flex-start;
  }
  
  .admin-actions {
    width: 100%;
    justify-content: flex-start;
  }
  
  .dashboard-stats {
    grid-template-columns: 1fr;
  }
  
  .action-cards {
    grid-template-columns: 1fr;
  }
  
  .form-row {
    flex-direction: column;
    gap: var(--spacing-md);
  }
  
  .editor-header {
    flex-direction: column;
    gap: var(--spacing-lg);
    align-items: flex-start;
  }
  
  .editor-actions {
    width: 100%;
    justify-content: flex-start;
  }
  
  .form-actions {
    flex-direction: column;
  }
  
  .tags-grid {
    grid-template-columns: 1fr;
  }
  
  .tag-card-header {
    flex-direction: column;
    gap: var(--spacing-sm);
    align-items: flex-start;
  }
  
  .form-modal-content {
    width: 95%;
    margin: var(--spacing-md);
  }
  
  .table-container {
    font-size: 0.875rem;
  }
  
  .admin-table th,
  .admin-table td {
    padding: var(--spacing-md);
  }
}

/* Navbar admin styles */
.admin-link {
  background: rgba(0, 255, 136, 0.1) !important;
  border: 1px solid rgba(0, 255, 136, 0.3) !important;
  border-radius: var(--radius-sm) !important;
  padding: var(--spacing-sm) var(--spacing-md) !important;
  color: var(--accent-success) !important;
}

.admin-link:hover {
  background: rgba(0, 255, 136, 0.2) !important;
  border-color: rgba(0, 255, 136, 0.5) !important;
}

.login-link {
  background: rgba(0, 153, 255, 0.1) !important;
  border: 1px solid rgba(0, 153, 255, 0.3) !important;
  border-radius: var(--radius-sm) !important;
  padding: var(--spacing-sm) var(--spacing-md) !important;
  color: var(--accent-secondary) !important;
}

.login-link:hover {
  background: rgba(0, 153, 255, 0.2) !important;
  border-color: rgba(0, 153, 255, 0.5) !important;
}

/* Editor loading styles */
.editor-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-md);
  color: var(--text-secondary);
}

.editor-loading .loading-spinner {
  margin-bottom: var(--spacing-md);
}

/* Image Selector Styles */
.image-selector-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.image-selector-content {
  background: var(--bg-primary);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-xl);
  width: 90%;
  max-width: 800px;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.image-selector-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-xl);
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.image-selector-header h3 {
  color: var(--text-primary);
  font-size: 1.5rem;
  margin: 0;
  font-weight: 600;
}

.image-selector-body {
  flex: 1;
  overflow-y: auto;
  padding: var(--spacing-xl);
}

.image-selector-body .images-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
  gap: var(--spacing-md);
}

.image-selector-body .image-item {
  border: 2px solid transparent;
  border-radius: var(--radius-md);
  overflow: hidden;
  cursor: pointer;
  transition: var(--transition-normal);
  background: rgba(255, 255, 255, 0.02);
}

.image-selector-body .image-item:hover {
  border-color: rgba(255, 255, 255, 0.2);
  transform: translateY(-2px);
}

.image-selector-body .image-item.selected {
  border-color: var(--accent-primary);
  box-shadow: 0 0 0 2px rgba(0, 255, 136, 0.3);
}

.image-selector-body .image-item img {
  width: 100%;
  height: 120px;
  object-fit: cover;
  display: block;
}

.image-selector-body .image-info {
  padding: var(--spacing-sm);
}

.image-selector-body .image-name {
  font-size: 0.75rem;
  color: var(--text-primary);
  margin: 0 0 var(--spacing-xs) 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: 500;
}

.image-selector-body .image-size {
  font-size: 0.625rem;
  color: var(--text-muted);
  margin: 0;
}

.image-selector-body .empty-state {
  text-align: center;
  padding: var(--spacing-3xl);
  color: var(--text-secondary);
}

.image-selector-footer {
  display: flex;
  justify-content: flex-end;
  gap: var(--spacing-md);
  padding: var(--spacing-xl);
  border-top: 1px solid rgba(255, 255, 255, 0.05);
}

.image-selector-footer .cancel-button {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-md);
  padding: var(--spacing-md) var(--spacing-lg);
  color: var(--text-primary);
  font-weight: 500;
  cursor: pointer;
  transition: var(--transition-normal);
}

.image-selector-footer .cancel-button:hover {
  background: rgba(255, 255, 255, 0.1);
}

.image-selector-footer .confirm-button {
  background: var(--gradient-primary);
  border: none;
  border-radius: var(--radius-md);
  padding: var(--spacing-md) var(--spacing-lg);
  color: var(--bg-primary);
  font-weight: 600;
  cursor: pointer;
  transition: var(--transition-normal);
}

.image-selector-footer .confirm-button:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: var(--glow-primary);
}

.image-selector-footer .confirm-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
  box-shadow: none;
}

/* Media Library Styles */
.media-controls {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-xl);
  padding: var(--spacing-xl);
  background: rgba(255, 255, 255, 0.02);
  border-radius: var(--radius-xl);
  border: 1px solid rgba(255, 255, 255, 0.05);
}

.media-filters {
  display: flex;
  gap: var(--spacing-md);
  align-items: center;
  flex-wrap: wrap;
}

.media-filters .search-input {
  flex: 1;
  min-width: 200px;
}

.filter-select {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  color: var(--text-primary);
  font-size: 0.875rem;
  cursor: pointer;
  transition: var(--transition-normal);
}

.filter-select:focus {
  outline: none;
  border-color: var(--accent-primary);
  box-shadow: 0 0 0 2px rgba(0, 255, 136, 0.2);
}

.media-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: var(--spacing-md);
}

.view-controls {
  display: flex;
  gap: var(--spacing-xs);
}

.view-button {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-sm);
  padding: var(--spacing-sm) var(--spacing-md);
  color: var(--text-secondary);
  cursor: pointer;
  transition: var(--transition-normal);
  font-size: 1rem;
}

.view-button:hover {
  background: rgba(255, 255, 255, 0.1);
  color: var(--text-primary);
}

.view-button.active {
  background: var(--gradient-primary);
  color: var(--bg-primary);
  border-color: transparent;
}

.bulk-actions {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.selection-count {
  color: var(--text-secondary);
  font-size: 0.875rem;
  font-weight: 500;
}

.bulk-delete-button {
  background: rgba(255, 68, 68, 0.1);
  border: 1px solid rgba(255, 68, 68, 0.3);
  border-radius: var(--radius-sm);
  padding: var(--spacing-sm) var(--spacing-md);
  color: var(--accent-error);
  font-size: 0.875rem;
  cursor: pointer;
  transition: var(--transition-normal);
}

.bulk-delete-button:hover {
  background: rgba(255, 68, 68, 0.2);
}

.cancel-selection-button {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-sm);
  padding: var(--spacing-sm) var(--spacing-md);
  color: var(--text-secondary);
  font-size: 0.875rem;
  cursor: pointer;
  transition: var(--transition-normal);
}

.cancel-selection-button:hover {
  background: rgba(255, 255, 255, 0.1);
  color: var(--text-primary);
}

.select-all-button {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-sm);
  padding: var(--spacing-sm) var(--spacing-md);
  color: var(--text-secondary);
  font-size: 0.875rem;
  cursor: pointer;
  transition: var(--transition-normal);
}

.select-all-button:hover {
  background: rgba(255, 255, 255, 0.1);
  color: var(--text-primary);
}

.cleanup-button {
  background: linear-gradient(135deg, #ff6b6b, #ff8e53);
  color: white;
  border: none;
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--radius-lg);
  font-size: 0.9rem;
  cursor: pointer;
  transition: var(--transition-normal);
  font-weight: 500;
  box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
}

.cleanup-button:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(255, 107, 107, 0.4);
}

.cleanup-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

.success-message {
  background: linear-gradient(135deg, rgba(34, 197, 94, 0.1), rgba(34, 197, 94, 0.05));
  border: 1px solid rgba(34, 197, 94, 0.3);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  color: var(--text-primary);
}

.success-message p {
  margin: 0 0 var(--spacing-sm) 0;
  font-weight: 500;
}

.success-message p:last-child {
  margin-bottom: 0;
}

.success-message details {
  margin-top: var(--spacing-md);
}

.success-message details summary {
  cursor: pointer;
  font-weight: 500;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-sm);
}

.success-message details ul {
  margin: 0;
  padding-left: var(--spacing-lg);
  color: var(--text-secondary);
}

.success-message details li {
  margin-bottom: var(--spacing-xs);
}

.image-error {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 160px;
  background: rgba(255, 68, 68, 0.1);
  border: 1px dashed rgba(255, 68, 68, 0.3);
  border-radius: var(--radius-lg);
  color: var(--text-secondary);
  font-size: 0.9rem;
  text-align: center;
}

.table-image-preview + .image-error {
  height: 50px;
  width: 50px;
  font-size: 1.5rem;
}

/* ===== CONTACT PAGE STYLES ===== */
.contact-page {
  min-height: 100vh;
  padding: calc(70px + var(--spacing-xl)) 0 var(--spacing-xl) 0;
  background: var(--bg-primary);
}

.contact-header {
  text-align: center;
  margin-bottom: var(--spacing-xxl);
}

.contact-title {
  font-family: 'Geist', sans-serif;
  font-size: clamp(2.5rem, 5vw, 4rem);
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--spacing-md);
  background: linear-gradient(135deg, #00ff88, #0099ff);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.contact-subtitle {
  font-family: 'Geist', sans-serif;
  font-size: clamp(1rem, 2.5vw, 1.25rem);
  color: var(--text-secondary);
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.6;
}

.contact-content {
  display: grid;
  grid-template-columns: 1fr 2fr;
  gap: var(--spacing-xxl);
  align-items: start;
}

.contact-info {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.contact-card {
  background: rgba(0, 0, 0, 0.8);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  text-align: center;
  transition: var(--transition-normal);
}

.contact-card:hover {
  background: rgba(0, 0, 0, 0.9);
  border-color: rgba(0, 255, 136, 0.3);
  transform: translateY(-5px);
}

.contact-icon {
  font-size: 2.5rem;
  margin-bottom: var(--spacing-md);
}

.contact-card h3 {
  font-family: 'Orbitron', monospace;
  font-size: 1.25rem;
  color: var(--accent-primary);
  margin-bottom: var(--spacing-sm);
}

.contact-card p {
  color: var(--text-secondary);
  font-size: 1rem;
}

.contact-form {
  background: rgba(0, 0, 0, 0.8);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xxl);
}

.form-group {
  margin-bottom: var(--spacing-xl);
}

.form-group label {
  display: block;
  font-family: 'Geist', sans-serif;
  font-size: 0.9rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-lg);
  padding-bottom: var(--spacing-sm);
}

.form-group input,
.form-group textarea {
  width: 100%;
  padding: var(--spacing-lg) var(--spacing-md);
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-lg);
  color: var(--text-primary);
  font-family: 'Geist', sans-serif;
  font-size: 1rem;
  transition: var(--transition-normal);
  resize: vertical;
}

.form-group input::placeholder,
.form-group textarea::placeholder {
  color: var(--text-tertiary);
}

.form-group input:focus,
.form-group textarea:focus {
  outline: none;
  border-color: var(--accent-primary);
  background: rgba(255, 255, 255, 0.08);
  box-shadow: 0 0 0 3px rgba(0, 255, 136, 0.1);
}

.form-group input.error,
.form-group textarea.error {
  border-color: #ff6b6b;
  box-shadow: 0 0 0 3px rgba(255, 107, 107, 0.1);
}

.field-error {
  display: block;
  color: #ff6b6b;
  font-size: 0.875rem;
  margin-top: var(--spacing-xs);
}

.character-count {
  text-align: right;
  color: var(--text-tertiary);
  font-size: 0.875rem;
  margin-top: var(--spacing-xs);
}

.captcha-group {
  background: rgba(0, 255, 136, 0.05);
  border: 1px solid rgba(0, 255, 136, 0.2);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
}

.captcha-container {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.captcha-question {
  font-family: 'Orbitron', monospace;
  font-size: 1.1rem;
  color: var(--accent-primary);
  font-weight: 600;
}

.captcha-container input {
  flex: 0 0 120px;
  margin: 0;
}

.captcha-refresh {
  background: none;
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: var(--radius-md);
  padding: var(--spacing-sm);
  color: var(--text-secondary);
  cursor: pointer;
  transition: var(--transition-normal);
  font-size: 1.2rem;
}

.captcha-refresh:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: var(--accent-primary);
}

.btn-submit {
  width: 100%;
  background: linear-gradient(135deg, #00ff88, #00cc6a);
  color: #000;
  font-weight: 600;
  font-size: 1.1rem;
  padding: var(--spacing-lg);
  border: none;
  border-radius: var(--radius-lg);
  cursor: pointer;
  transition: var(--transition-normal);
  position: relative;
  overflow: hidden;
}

.btn-submit:hover:not(:disabled) {
  background: linear-gradient(135deg, #00cc6a, #00aa56);
  transform: translateY(-2px);
  box-shadow: 0 10px 25px rgba(0, 255, 136, 0.3);
}

.btn-submit:disabled {
  opacity: 0.7;
  cursor: not-allowed;
  transform: none;
}

.loading-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
}

.spinner {
  width: 20px;
  height: 20px;
  border: 2px solid rgba(0, 0, 0, 0.3);
  border-top: 2px solid #000;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.contact-success {
  text-align: center;
  padding: var(--spacing-xxl);
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-xl);
  max-width: 600px;
  margin: 0 auto;
}

.success-icon {
  font-size: 4rem;
  margin-bottom: var(--spacing-lg);
}

.contact-success h1 {
  font-family: 'Orbitron', monospace;
  color: var(--accent-primary);
  margin-bottom: var(--spacing-md);
}

.contact-success p {
  color: var(--text-secondary);
  margin-bottom: var(--spacing-xl);
  font-size: 1.1rem;
}

.error-message {
  background: rgba(255, 107, 107, 0.1);
  border: 1px solid rgba(255, 107, 107, 0.3);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  color: #ff6b6b;
  margin-bottom: var(--spacing-lg);
  text-align: center;
}

/* Responsive */
@media (max-width: 768px) {
  .contact-content {
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
  }
  
  .contact-info {
    order: 2;
  }
  
  .contact-form {
    order: 1;
    padding: var(--spacing-xl);
  }
  
  .captcha-container {
    flex-direction: column;
    align-items: stretch;
  }
  
  .captcha-container input {
    flex: 1;
  }
}

/* ===== CONTACTS ADMIN STYLES ===== */
.contacts-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-xxl);
}

.stat-card {
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  text-align: center;
  transition: var(--transition-normal);
}

.stat-card:hover {
  background: rgba(255, 255, 255, 0.05);
  transform: translateY(-2px);
}

.stat-card.unread {
  border-color: rgba(0, 255, 136, 0.3);
  background: rgba(0, 255, 136, 0.05);
}

.stat-number {
  font-family: 'Orbitron', monospace;
  font-size: 2.5rem;
  font-weight: 700;
  color: var(--accent-primary);
  margin-bottom: var(--spacing-sm);
}

.stat-label {
  color: var(--text-secondary);
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.contacts-filters {
  display: flex;
  gap: var(--spacing-lg);
  align-items: center;
  margin-bottom: var(--spacing-xl);
  flex-wrap: wrap;
}

.search-input {
  flex: 1;
  min-width: 300px;
  padding: var(--spacing-md);
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-lg);
  color: var(--text-primary);
  font-family: 'Geist', sans-serif;
}

.search-input:focus {
  outline: none;
  border-color: var(--accent-primary);
  box-shadow: 0 0 0 3px rgba(0, 255, 136, 0.1);
}

.filter-checkbox {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  color: var(--text-secondary);
  cursor: pointer;
  white-space: nowrap;
}

.filter-checkbox input[type="checkbox"] {
  width: 18px;
  height: 18px;
  accent-color: var(--accent-primary);
}

.contacts-list {
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-xl);
  overflow: hidden;
}

.contact-item {
  padding: var(--spacing-xl);
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  cursor: pointer;
  transition: var(--transition-normal);
}

.contact-item:hover {
  background: rgba(255, 255, 255, 0.05);
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-item.unread {
  background: rgba(0, 255, 136, 0.02);
  border-left: 4px solid var(--accent-primary);
}

.contact-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--spacing-md);
}

.contact-info h3 {
  font-family: 'Orbitron', monospace;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
  font-size: 1.1rem;
}

.contact-info p {
  color: var(--text-secondary);
  margin: 0;
  font-size: 0.9rem;
}

.contact-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: var(--spacing-xs);
}

.contact-date {
  color: var(--text-tertiary);
  font-size: 0.875rem;
  white-space: nowrap;
}

.unread-badge {
  background: var(--accent-primary);
  color: #000;
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.contact-preview {
  color: var(--text-secondary);
  line-height: 1.5;
  font-size: 0.95rem;
}

/* Modal Styles */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: var(--spacing-lg);
}

.modal-content {
  background: var(--bg-secondary);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-xl);
  max-width: 600px;
  width: 100%;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-xl);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.modal-header h2 {
  font-family: 'Orbitron', monospace;
  color: var(--text-primary);
  margin: 0;
}

.close-button {
  background: none;
  border: none;
  color: var(--text-secondary);
  font-size: 1.5rem;
  cursor: pointer;
  padding: var(--spacing-sm);
  border-radius: var(--radius-sm);
  transition: var(--transition-normal);
}

.close-button:hover {
  background: rgba(255, 255, 255, 0.1);
  color: var(--text-primary);
}

.modal-body {
  padding: var(--spacing-xl);
}

.contact-details {
  display: grid;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-xl);
}

.detail-group {
  display: flex;
  gap: var(--spacing-md);
}

.detail-group label {
  font-family: 'Orbitron', monospace;
  color: var(--text-secondary);
  min-width: 80px;
  font-size: 0.9rem;
}

.detail-group span {
  color: var(--text-primary);
  flex: 1;
}

.message-content {
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
}

.message-content label {
  font-family: 'Orbitron', monospace;
  color: var(--text-secondary);
  display: block;
  margin-bottom: var(--spacing-sm);
  font-size: 0.9rem;
}

.message-text {
  color: var(--text-primary);
  line-height: 1.6;
  white-space: pre-wrap;
}

.modal-footer {
  display: flex;
  gap: var(--spacing-md);
  justify-content: flex-end;
  padding: var(--spacing-xl);
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.modal-footer button {
  padding: var(--spacing-md) var(--spacing-lg);
  border-radius: var(--radius-lg);
  font-weight: 500;
  cursor: pointer;
  transition: var(--transition-normal);
}

.secondary-button {
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  color: var(--text-primary);
}

.secondary-button:hover {
  background: rgba(255, 255, 255, 0.15);
}

.delete-button {
  background: linear-gradient(135deg, #ff6b6b, #ff8e53);
  border: none;
  color: white;
}

.delete-button:hover {
  background: linear-gradient(135deg, #ff5252, #ff7043);
  transform: translateY(-2px);
}

@media (max-width: 768px) {
  .contacts-filters {
    flex-direction: column;
    align-items: stretch;
  }
  
  .search-input {
    min-width: auto;
  }
  
  .contact-header {
    flex-direction: column;
    gap: var(--spacing-sm);
  }
  
  .contact-meta {
    align-items: flex-start;
  }
  
  .modal-content {
    margin: var(--spacing-lg);
    max-height: calc(100vh - 2 * var(--spacing-lg));
  }
  
  .modal-footer {
    flex-direction: column;
  }
}

.media-library {
  border-radius: var(--radius-xl);
  overflow: hidden;
}

.media-library.grid .images-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: var(--spacing-lg);
}

.image-card {
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(255, 255, 255, 0.05);
  border-radius: var(--radius-lg);
  overflow: hidden;
  transition: var(--transition-normal);
}

.image-card:hover {
  background: rgba(255, 255, 255, 0.05);
  border-color: rgba(255, 255, 255, 0.1);
  transform: translateY(-2px);
}

.image-card.selected {
  border-color: var(--accent-primary);
  box-shadow: 0 0 0 2px rgba(0, 255, 136, 0.3);
}

.image-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md);
  background: rgba(255, 255, 255, 0.02);
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.image-checkbox {
  width: 16px;
  height: 16px;
  cursor: pointer;
}

.image-actions {
  display: flex;
  gap: var(--spacing-xs);
}

.copy-button {
  background: none;
  border: none;
  font-size: 1rem;
  cursor: pointer;
  padding: var(--spacing-xs);
  border-radius: var(--radius-sm);
  transition: var(--transition-normal);
}

.copy-button:hover {
  background: rgba(255, 255, 255, 0.1);
}

.delete-button {
  background: none;
  border: none;
  font-size: 1rem;
  cursor: pointer;
  padding: var(--spacing-xs);
  border-radius: var(--radius-sm);
  transition: var(--transition-normal);
}

.delete-button:hover:not(:disabled) {
  background: rgba(255, 68, 68, 0.2);
}

.delete-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.image-preview {
  position: relative;
  overflow: hidden;
}

.image-preview img {
  width: 100%;
  height: 160px;
  object-fit: cover;
  transition: var(--transition-normal);
}

.image-card:hover .image-preview img {
  transform: scale(1.05);
}

.image-info {
  padding: var(--spacing-md);
}

.image-info h4 {
  color: var(--text-primary);
  font-size: 0.875rem;
  font-weight: 600;
  margin: 0 0 var(--spacing-xs) 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.image-size {
  color: var(--text-muted);
  font-size: 0.75rem;
  margin: 0 0 var(--spacing-xs) 0;
}

.image-usage {
  color: var(--text-secondary);
  font-size: 0.75rem;
  margin: 0 0 var(--spacing-xs) 0;
}

.image-date {
  color: var(--text-muted);
  font-size: 0.75rem;
  margin: 0;
}

.images-list .images-table {
  width: 100%;
  border-collapse: collapse;
  background: rgba(255, 255, 255, 0.02);
  border-radius: var(--radius-lg);
  overflow: hidden;
}

.images-table th,
.images-table td {
  padding: var(--spacing-md);
  text-align: left;
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.images-table th {
  background: rgba(255, 255, 255, 0.05);
  color: var(--text-primary);
  font-weight: 600;
  font-size: 0.875rem;
}

.images-table td {
  color: var(--text-secondary);
}

.images-table tr.selected {
  background: rgba(0, 255, 136, 0.05);
}

.table-image-preview {
  width: 60px;
  height: 60px;
  object-fit: cover;
  border-radius: var(--radius-sm);
}

.image-name-cell strong {
  color: var(--text-primary);
  font-size: 0.875rem;
}

.image-name-cell p {
  color: var(--text-muted);
  font-size: 0.75rem;
  margin: var(--spacing-xs) 0 0 0;
}

.table-actions {
  display: flex;
  gap: var(--spacing-xs);
}

.upload-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.upload-modal-content {
  background: var(--bg-primary);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-xl);
  width: 90%;
  max-width: 600px;
  max-height: 80vh;
  overflow-y: auto;
}

.upload-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-xl);
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.upload-modal-header h2 {
  color: var(--text-primary);
  font-size: 1.5rem;
  margin: 0;
}

/* Custom Image Tool Styles */
.image-tool-container {
  display: flex;
  gap: var(--spacing-md);
  justify-content: center;
  padding: var(--spacing-xl);
  border: 2px dashed rgba(255, 255, 255, 0.2);
  border-radius: var(--radius-lg);
  background: rgba(255, 255, 255, 0.02);
  transition: var(--transition-normal);
}

.image-tool-container:hover {
  border-color: rgba(255, 255, 255, 0.4);
  background: rgba(255, 255, 255, 0.05);
}

.image-tool-upload,
.image-tool-select {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-md) var(--spacing-lg);
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-md);
  color: var(--text-primary);
  font-size: 0.875rem;
  font-weight: 500;
  cursor: pointer;
  transition: var(--transition-normal);
}

.image-tool-upload:hover,
.image-tool-select:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.2);
  transform: translateY(-2px);
}

.image-tool-upload svg,
.image-tool-select svg {
  width: 16px;
  height: 16px;
  fill: currentColor;
}

.simple-image {
  margin: var(--spacing-lg) 0;
}

.image-tool__image {
  max-width: 100%;
  height: auto;
  border-radius: var(--radius-md);
  display: block;
  margin: 0 auto;
  transition: var(--transition-normal);
}

.image-tool__image.image-tool--withBorder {
  border: 1px solid rgba(255, 255, 255, 0.2);
  padding: var(--spacing-sm);
}

.image-tool__image.image-tool--withBackground {
  background: rgba(255, 255, 255, 0.05);
  padding: var(--spacing-md);
}

.image-tool__image.image-tool--stretched {
  width: 100%;
}

.image-tool__caption {
  text-align: center;
  margin-top: var(--spacing-md);
  font-size: 0.875rem;
  color: var(--text-muted);
  font-style: italic;
  padding: var(--spacing-sm);
  border-radius: var(--radius-sm);
  min-height: 20px;
}

.image-tool__caption:focus {
  outline: none;
  background: rgba(255, 255, 255, 0.05);
  color: var(--text-primary);
}

.image-tool__caption:empty::before {
  content: 'Escribe una descripcin para la imagen...';
  color: var(--text-muted);
}

.image-tool__caption br {
  display: none;
}

/* Enhanced Image Tool Styles */
.enhanced-image-tool {
  position: relative;
}

.enhanced-image-tool .image-tool-select {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-sm) var(--spacing-md);
  background: rgba(0, 255, 136, 0.1);
  border: 1px solid rgba(0, 255, 136, 0.3);
  border-radius: var(--radius-md);
  color: var(--accent-primary);
  font-size: 0.875rem;
  font-weight: 500;
  cursor: pointer;
  transition: var(--transition-normal);
  margin-top: var(--spacing-sm);
  width: 100%;
  justify-content: center;
}

.enhanced-image-tool .image-tool-select:hover {
  background: rgba(0, 255, 136, 0.2);
  border-color: rgba(0, 255, 136, 0.5);
  transform: translateY(-1px);
}

.enhanced-image-tool .image-tool-select svg {
  width: 16px;
  height: 16px;
  fill: currentColor;
}

/* Simple Image Tool Styles */
.simple-image-tool {
  margin: var(--spacing-lg) 0;
}

.image-upload-container {
  display: flex;
  gap: var(--spacing-md);
  justify-content: center;
  padding: var(--spacing-xl);
  border: 2px dashed rgba(255, 255, 255, 0.2);
  border-radius: var(--radius-lg);
  background: rgba(255, 255, 255, 0.02);
