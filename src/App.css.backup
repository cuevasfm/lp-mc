}

.image-container {
  text-align: center;
}

.simple-image-tool .image-tool__image {
  max-width: 100%;
  height: auto;
  border-radius: var(--radius-md);
  display: block;
  margin: 0 auto;
  transition: var(--transition-normal);
}

.simple-image-tool .image-tool__image.image-tool--withBorder {
  border: 1px solid rgba(255, 255, 255, 0.2);
  padding: var(--spacing-sm);
}

.simple-image-tool .image-tool__image.image-tool--withBackground {
  background: rgba(255, 255, 255, 0.05);
  padding: var(--spacing-md);
}

.simple-image-tool .image-tool__image.image-tool--stretched {
  width: 100%;
}

.simple-image-tool .image-tool__caption {
  text-align: center;
  margin-top: var(--spacing-md);
  font-size: 0.875rem;
  color: var(--text-muted);
  font-style: italic;
  padding: var(--spacing-sm);
  border-radius: var(--radius-sm);
