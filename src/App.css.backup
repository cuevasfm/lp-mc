}

.simple-image-tool .image-tool__caption:empty::before {
  content: 'Escribe una descripcin para la imagen...';
  color: var(--text-muted);
}

.image-loading {
  text-align: center;
  padding: var(--spacing-xl);
  color: var(--text-secondary);
}

.image-error {
  text-align: center;
  padding: var(--spacing-xl);
  color: var(--accent-error);
  background: rgba(255, 68, 68, 0.1);
  border: 1px solid rgba(255, 68, 68, 0.3);
  border-radius: var(--radius-md);
}

/* Debug Image Tool Styles */
.debug-image-tool {
  margin: var(--spacing-lg) 0;
  border: 2px solid #ff0000 !important;
  padding: 10px !important;
  background: rgba(255, 0, 0, 0.1) !important;
}

/* Responsive styles for Image Selector */
@media (max-width: 768px) {
  .image-selector-content {
    width: 95%;
    max-height: 90vh;
  }
  
  .image-selector-body .images-grid {
    grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    gap: var(--spacing-sm);
  }
  
  .image-selector-body .image-item img {
    height: 100px;
  }
  
  .image-selector-footer {
    flex-direction: column;
    gap: var(--spacing-sm);
  }
  
  .media-controls {
    padding: var(--spacing-lg);
  }
  
  .media-filters {
    flex-direction: column;
    align-items: stretch;
  }
  
  .media-filters .search-input {
    min-width: auto;
  }
  
  .media-actions {
    justify-content: center;
  }
  
  .bulk-actions {
    flex-direction: column;
    gap: var(--spacing-sm);
  }
  
  .media-library.grid .images-grid {
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
  }
  
  .upload-modal-content {
    width: 95%;
    margin: var(--spacing-md);
  }
}